<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
       android:background="@color/titlebg"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/othercitybyjobmain"
    >
    
     <LinearLayout 
       
       	android:id="@+id/loadll"
       	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:orientation="horizontal"
       	android:layout_centerHorizontal="true"
       	android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp"
       >
       
        <ProgressBar
        android:id="@+id/loadpro"
        android:layout_width="20dp"
        android:layout_height="20dp" 
       
        />
        <TextView 
            	android:id="@+id/loadtext"
				android:layout_marginTop="2dp"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="@color/black"
            	android:text="正在获取位置.."
            	android:layout_marginLeft="10dp"
            
            />
   </LinearLayout>
   
     
     
             
         <RelativeLayout 
			        	android:id="@+id/titlerev"
			        	android:layout_width="fill_parent"
			        	android:layout_height="50dp"
			        	android:background="@color/titlebg"
			        	android:visibility="visible"
			        
			        >
        
             <RelativeLayout 
                 	android:id="@+id/zwxz"
                 	android:layout_width="130dp"
                 	android:layout_height="50dp"
                 	android:padding="10dp"
                 	android:background="@drawable/revclick3"
                 	android:onClick="xzzwxz"
                 	android:gravity="center"
                 	android:layout_toRightOf="@+id/rightsp"
        	android:layout_alignParentRight="true"
                 >
                 
			        	<TextView 
			        	    	android:id="@+id/zwxztext"
			        	    	android:layout_width="90dp"
			        	    	android:layout_height="wrap_content"
			        	    	android:text="薪资"
			        	    	android:layout_centerVertical="true"
			        	    	android:paddingLeft="10dp"
			        	    	android:paddingRight="10dp"
			        	    	android:textColor="@color/black"
			        	    	android:textSize="15sp"
			        	    	android:singleLine="true"
			        	    />
			        	<ImageView 
			        	    	android:src="@drawable/triangle_icon_x"
			        	    	android:layout_width="20dp"
			        	    	android:layout_height="15dp"
			        	    	android:layout_alignParentRight="true"
			        	    	android:layout_centerVertical="true"
			        	    />
                 
             </RelativeLayout>
             	 <View 
				        	android:id="@+id/leftsp"
				        	android:layout_width="0.5dp"
				        	android:layout_height="25dp"
				    		  android:background="@color/gray"
				        	android:layout_toLeftOf="@+id/gsfl"
				        	android:layout_centerVertical="true"
				        
				        />
             	 <RelativeLayout 
                 	android:id="@+id/gsfl"
                 	android:layout_width="130dp"
                 	android:layout_height="50dp"
                 	android:padding="10dp"
                 	android:layout_centerVertical="true"
                 	android:layout_centerHorizontal="true"
                 	android:background="@drawable/revclick3"
                 	android:gravity="center"
                 	android:onClick="xzfl"
                 >
                 
			        	<TextView 
			        	    	android:id="@+id/gsfltext"
			        	    	android:layout_width="90dp"
			        	    	android:layout_height="wrap_content"
			        	    	android:text="公司福利"
			        	    	android:layout_centerVertical="true"
			        	    	android:paddingLeft="10dp"
			        	    	android:paddingRight="10dp"
			        	    	android:textColor="@color/black"
			        	    	android:textSize="15sp"
			        	    	android:gravity="center"
			        	    />
			        	<ImageView 
			        	    	android:src="@drawable/triangle_icon_x"
			        	    	android:layout_width="20dp"
			        	    	android:layout_height="15dp"
			        	    	android:layout_alignParentRight="true"
			        	    	android:layout_centerVertical="true"
			        	    />
                 
             </RelativeLayout>
             	 <View 
				        	android:id="@+id/rightsp"
				        	android:layout_width="0.5dp"
				        	android:layout_height="25dp"
				    		  android:background="@color/gray"
				        	android:layout_toRightOf="@+id/gsfl"
				        	android:layout_centerVertical="true"
				        
				        />
			        
				<RelativeLayout 
                 	android:id="@+id/titlezwmctext"
                 	android:layout_width="130dp"
                 	android:layout_height="50dp"
                 	android:padding="10dp"
                 	android:background="@drawable/revclick3"
                 	android:gravity="center"
                 	android:layout_toLeftOf="@+id/leftsp"
         
                 	android:onClick="xzzwmc"
                 	                 	
                 	android:layout_alignParentLeft="true"
                 	
                 >
                 
			        	<TextView 
			        	    	android:id="@+id/titlezwmc"
			        	    	android:layout_width="90dp"
			        	    	android:layout_height="wrap_content"
			        	    	android:text="职位"
			        	    	android:layout_centerVertical="true"
			        	    	android:paddingLeft="10dp"
			        	    	android:paddingRight="10dp"
			        	    	android:textColor="@color/black"
			        	    	android:textSize="15sp"
			        	    	android:singleLine="true"
			        	    />
			        	<ImageView 
			        	    	android:src="@drawable/triangle_icon_x"
			        	    	android:layout_width="20dp"
			        	    	android:layout_height="15dp"
			        	    android:layout_alignParentRight="true"
			        	    	android:layout_centerVertical="true"
			        	    />
                 
             </RelativeLayout>	        
					
			    </RelativeLayout>
             
    <View 
        	android:id="@+id/titlefgx"
        	android:layout_width="fill_parent"
        	android:layout_height="0.8dp"
      android:background="@color/gray"
        	android:layout_below="@+id/titlerev"
        
        />
  <ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:id="@+id/mainsc"
    android:visibility="gone"
	android:layout_above="@+id/bottomenu"
	android:layout_below="@+id/titlerev"
         >
         <RelativeLayout 
              android:layout_width="match_parent"
			android:layout_height="wrap_content"
             >
						<LinearLayout
						    
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
							android:id="@+id/zpll"
							android:orientation="horizontal"
							android:weightSum="2"
						    >
							    <LinearLayout
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
								android:id="@+id/zp1"
								android:orientation="vertical"
								android:layout_weight="1"
								android:gravity="center"
							    >
						  		  </LinearLayout>	
								         <LinearLayout
								    android:layout_width="wrap_content"
								    android:layout_height="wrap_content"
									android:id="@+id/zp2"
									android:orientation="vertical"
									android:layout_weight="1"
									android:gravity="center"
						    >
						</LinearLayout>
					</LinearLayout>
					<RelativeLayout
					    	android:id="@+id/footerev" 
					    	android:layout_width="fill_parent"
					    	android:layout_height="30dp"
					    		 android:layout_below="@+id/zpll"
					    >

					   <ProgressBar
			       android:id="@+id/loadprobypage"
			       android:layout_width="30dp"
			       android:layout_height="30dp" 
			      android:layout_centerHorizontal="true"
			       android:visibility="gone"
			       

			       />
				</RelativeLayout>
			
      </RelativeLayout>
</ScrollView>

 <LinearLayout   
        android:id="@+id/bottomenu"  
        android:layout_alignParentBottom="true"  
        android:layout_height="30dp"  
        android:layout_width="fill_parent"  
        android:orientation="horizontal"
        android:background="@drawable/bottom"
        android:padding="5dp"
        >  
       		
     <ImageView 
         	android:id="@+id/myaddrimage"
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:src="@drawable/store_address"
         />
     
     <TextView 
         android:id="@+id/myaddr"
         	android:layout_width="fill_parent"
         	android:layout_height="fill_parent"
         	android:text="正在获取位置..."
         	android:gravity="center_vertical"
         	android:textColor="@color/red"
         	android:textSize="13sp"
         	android:layout_marginLeft="5dp"

         />
     
   
    </LinearLayout> 
</RelativeLayout>
