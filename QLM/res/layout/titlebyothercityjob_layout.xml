<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45dp" 
    android:background="@color/titlebg"
    >
    <Button 
        	android:id="@+id/back"
        	android:layout_width="45dp"
        	android:layout_height="40dp"
        	android:background="@drawable/header_menu_back"
        	android:layout_centerVertical="true"
        	android:layout_marginLeft="20dp"
        />
        <Button 
        	android:id="@+id/search"
        	android:layout_width="45dp"
        	android:layout_height="40dp"
        	android:background="@drawable/header_menu_search"
        	android:layout_centerVertical="true"
        	android:layout_alignParentRight="true"
        	android:layout_marginRight="20dp"
        />
    
    <TextView 
    		android:id="@+id/searchjobbycity"
        	android:layout_width="110dp"
        	android:gravity="center"
        	android:singleLine="true"
        	android:layout_height="wrap_content"
        	android:text="找工作-东莞市"
        	android:textColor="@color/red"
        	android:textSize="16sp"
        	android:layout_centerVertical="true"
        	android:layout_centerHorizontal="true"
        />
    <ImageView 
        	android:src="@drawable/triangle_icon_x"
        	android:layout_toRightOf="@+id/searchjobbycity"
        	android:layout_centerVertical="true"
        	android:layout_width="15dp"
        	android:layout_height="15dp"
        />
    
    <View 
        	android:layout_width="fill_parent"
        	android:layout_height="0.8dp"
        	android:background="@color/gray"
        	android:layout_alignParentBottom="true"
        />
    

</RelativeLayout>
