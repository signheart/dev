<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="2dp"
    
     >
    	<ImageView 
    	    	android:id="@+id/zpimage"
    	    	android:layout_width="fill_parent"
    	    	android:layout_height="wrap_content"
    	    	android:src="@drawable/nopic"
    	    	android:layout_centerHorizontal="true"
    	    	  android:scaleType="centerCrop"
    	    	   android:adjustViewBounds="true"
    	    />
    
    	<ImageView 
    	    	android:id="@+id/ckimage"
    	    	android:layout_width="10dp"
    	    	android:layout_height="10dp"
    	    	android:src="@drawable/waterfall_eye"
    	    	android:layout_marginTop="6dp"
    	    	android:layout_below="@+id/zpimage"
    	    	android:padding="0dp"
    	    />
    	<TextView 
    	    	android:id="@+id/ckcs"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="10dp"
    	    	android:text="12"
    	    	android:textColor="@color/black"
    	    	android:layout_toRightOf="@+id/ckimage"
    	    	android:layout_marginTop="4dp"
    	    	android:layout_below="@+id/zpimage"
    	    	android:layout_marginLeft="5dp"
    	    	android:textSize="9sp"
    	    	android:layout_alignBottom="@+id/ckimage"
    	    	android:padding="0dp"
    	    /> 
    	    
    	<ImageView 
    	    	android:id="@+id/dateimage"
    	    	android:layout_width="10dp"
    	    	android:layout_height="10dp"
    	    	android:src="@drawable/waterfall_time"
    	    	android:layout_marginTop="6dp"
    	    	android:layout_below="@+id/zpimage"
    	    	android:layout_toLeftOf="@+id/zpcreatedate"
    	    	android:padding="0dp"
    	    />
    	<TextView 
    	    	android:id="@+id/zpcreatedate"
    	    	android:text="2014-02-02 22:36"
    	    	android:layout_below="@+id/zpimage"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="10dp"
    	    	android:layout_marginTop="4dp"
    	    	android:layout_marginLeft="5dp"
    	    	android:textSize="9sp"
    	    	android:textColor="@color/black"
    	    	android:layout_alignParentRight="true"
    	    	android:layout_alignBottom="@+id/dateimage"
    	    	android:padding="0dp"
    
    	    />
    	     <View
    	         
    	         
               android:id="@+id/zpfgx"
               android:layout_below="@+id/zpcreatedate"
               	android:layout_width="fill_parent"
               	android:layout_height="0.8dp"
               	android:background="@color/gray"
               	android:layout_marginTop="5dp"
               />
    	 
			<TextView 
    	    	android:text="公司名称"
    	    	android:layout_below="@+id/zpfgx"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="wrap_content"
    	    	android:layout_marginTop="5dp"
    	    	android:layout_marginLeft="5dp"
    	    	android:textSize="13sp"
    	    	android:textColor="@color/black"
    	    	android:id="@+id/gsmc"
    	    	android:singleLine="true"
    	    	android:textStyle="bold"
    	    />
	
			<TextView 
    	    	android:text="职位名称"
    	    	android:layout_below="@+id/gsmc"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="wrap_content"
    	    	android:layout_marginTop="2dp"
    	    	android:textSize="11sp"
    	    	android:id="@+id/zwmc"
    	    	 	android:textColor="@color/black"
    	    	 	android:layout_alignLeft="@+id/gsmc"
    	    />
			<TextView 
    	    	android:text="招聘人数"
    	    	android:layout_below="@+id/zwmc"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="wrap_content"
    	    	android:layout_marginTop="2dp"
    	    	android:textSize="11sp"
    	    	android:id="@+id/zprs"
    	    	 	android:textColor="@color/black"
    	    	 	android:layout_alignLeft="@+id/gsmc"
    	    />
			<TextView 
    	    	android:text="待遇"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="wrap_content"
    	    	android:textSize="11sp"
    	    	android:id="@+id/zpdy"
    	    	 	android:textColor="@color/black"
    	    	 	android:layout_alignTop="@+id/zprs"
				android:layout_toRightOf="@+id/zprs"
				android:layout_marginLeft="10dp"
    	    />
			<TextView 
    	    	android:text="公司地址"
    	    	android:layout_below="@+id/zprs"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="wrap_content"
    	    	android:layout_marginTop="2dp"
    	    	android:textSize="11sp"
    	    	android:id="@+id/gsdz"
    	    	 	android:textColor="@color/black"
    	    	 	android:layout_alignLeft="@+id/gsmc"
    	    />
			
			<ImageView 
    	    	android:id="@+id/jlimage"
    	    	android:layout_width="10dp"
    	    	android:layout_height="10dp"
    	    	android:src="@drawable/waterfall_position"
    	    	android:layout_below="@+id/kb"
    	    	android:layout_toLeftOf="@+id/jl"
    	    	android:layout_marginTop="1dp"
    	    	
    	    />
				<TextView 
				    android:layout_marginTop="2dp"
			    	android:layout_below="@+id/gsdz"
			    	android:id="@+id/kb"
			    	android:background="@color/white"
			    	android:layout_width="5dp"
			    	android:layout_height="20dp"
			    	 />
						<TextView 
						    android:layout_marginTop="2dp"
			    	android:layout_below="@+id/gsdz"
			    	android:id="@+id/baochi"
			    	android:background="@drawable/btn1"
			    	android:layout_width="30dp"
			    	android:text="包吃"
			    	android:textSize="9sp"
			    	android:gravity="center"
			    	android:textColor="@color/white"
			    	android:layout_height="15dp"
			    	android:layout_alignLeft="@+id/gsmc"
			    	 />
			<TextView 
			    android:layout_marginTop="2dp"
			    	android:layout_below="@+id/gsdz"
			    	android:id="@+id/baozhu"
			    	android:layout_width="30dp"
			    	android:layout_height="15dp"
			    	android:background="@drawable/btn1"
			    	android:text="包住"
			    	android:textSize="9sp"
			    	android:gravity="center"
			    		android:textColor="@color/white"
			    	android:layout_toRightOf="@+id/baochi"
			    	 />
			<TextView 
			    android:layout_marginTop="2dp"
			    	android:layout_below="@+id/gsdz"
			    	android:id="@+id/shuangxiu"
			    	android:layout_width="30dp"
			    	android:background="@drawable/btn1"
			    	android:text="双休"
			    	android:textSize="9sp"
			    	android:gravity="center"
			    		android:textColor="@color/white"
			    	android:layout_height="15dp"
			    	android:layout_toRightOf="@+id/baozhu"
			    	 />
			<TextView 
			    android:layout_marginTop="2dp"
			    	android:layout_below="@+id/gsdz"
			    	android:id="@+id/wxyj"
			    	android:background="@drawable/btn1"
			    	android:text="五险一金"
			    	android:textSize="9sp"
			    	android:gravity="center"
			    		android:textColor="@color/white"
			    	android:layout_width="60dp"
			    	android:layout_height="15dp"
			    	android:layout_toRightOf="@+id/shuangxiu"
			    	 />
			
			<TextView 
			    	android:text="1000m"
    	    	android:layout_below="@+id/kb"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="wrap_content"
    	    	android:textSize="9sp"
    	    	android:id="@+id/jl"
    	    	 android:layout_alignParentRight="true"
    	    	 android:textColor="@color/red"
    	    	 android:layout_marginLeft="5dp"
			    />
			
</RelativeLayout>
