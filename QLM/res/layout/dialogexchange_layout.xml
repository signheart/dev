<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@color/white"
    >

<RelativeLayout 
    android:layout_width="270dp"
    android:layout_height="wrap_content" 
    android:background="@color/white"
    android:padding="10dp"
    >
    

<TextView 
    	android:id="@+id/title"
    	android:layout_width="270dp"
    	android:layout_height="wrap_content"
    	android:text="兑换话费"
    	android:gravity="center"
    	android:textSize="20sp"
    	android:textColor="@color/red"
    	android:layout_marginBottom="5dp"
    />  
    <View 
   		     android:id="@+id/titlefgx"
        	android:layout_width="270dp"
        	android:layout_height="0.8dp"
        	android:background="@color/red"
        	android:layout_below="@+id/title"
        	
        />
    
    <RadioGroup
        	android:layout_below="@+id/titlefgx"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="15dp"
        	android:id="@+id/selprice"
         >
          <RadioButton 
            	android:id="@+id/yy"
            	android:text="1元"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="@color/black"
            />
        <RadioButton 
            	android:id="@+id/wy"
            	android:text="5元"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="@color/black"
            />
          <RadioButton 
              android:id="@+id/sy"
            	android:text="10元"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="@color/black"
            />
            <RadioButton 
                 android:id="@+id/ssy"
            	android:text="30元"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="@color/black"
            />
             <RadioButton 
                    android:id="@+id/wsy"
            	android:text="50元"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="@color/black"
            />
              <RadioButton 
                    android:id="@+id/yby"
            	android:text="100元"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="@color/black"
            />
        
    </RadioGroup>
    
   
    <TextView 
        	android:id="@+id/ps"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="12sp"
        	android:textColor="@color/grey21"
        	android:layout_below="@+id/selprice"
        	android:text="(注: 一个月内只能兑换一次话费)"
        />
    
     <Button 
        	android:id="@+id/exchange1"
        	android:layout_width="270dp"
        	android:layout_height="40dp"
        	android:background="@drawable/btn3"
        	android:text="兑换"
        	android:textColor="@color/white"
        	android:layout_below="@+id/ps"
        	android:textSize="13sp"
        	android:layout_marginTop="10dp"
    ></Button>
    
