<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@color/white"
    >

<RelativeLayout 
    android:layout_width="270dp"
    android:layout_height="wrap_content" 
    android:background="@color/white"
    android:padding="10dp"
    >
    

<TextView 
    	android:id="@+id/title"
    	android:layout_width="270dp"
    	android:layout_height="wrap_content"
    	android:text="找回密码"
    	android:gravity="center"
    	android:textSize="20sp"
    	android:textColor="@color/red"
    	android:layout_marginBottom="5dp"
    />  
    <View 
   		     android:id="@+id/titlefgx"
        	android:layout_width="270dp"
        	android:layout_height="0.8dp"
        	android:background="@color/red"
        	android:layout_below="@+id/title"
        	
        />
    	  <RelativeLayout
          	android:layout_width="fill_parent"
          	android:layout_height="wrap_content"
          	android:id="@+id/userphoneregrev"
          	android:padding="10dp"
          	android:layout_below="@+id/titlefgx"
          	android:layout_marginTop="10dp"
           >
            <TextView 
   		          	android:id="@+id/uuserphoneregtext"
   		          	android:layout_width="wrap_content"
   		          	android:layout_height="wrap_content"
   		          	android:text="手机号 :"
   		          	android:textColor="@color/black"
   		          	android:textSize="16sp"
   		          	android:layout_centerVertical="true"
   	
   		          />
    		<EditText 
    		    	android:id="@+id/userphone"
    		    	android:layout_width="fill_parent"
    		    	android:layout_height="wrap_content"
    		    	android:maxLines="1"
    		    	android:textSize="16sp"
    		    	android:singleLine="true"
    		    	android:layout_marginLeft="5dp"
    		    	android:layout_toRightOf="@+id/uuserphoneregtext"
    		    	android:hint="注册的手机号"
    		    	android:textColor="@color/black"
    		    	android:background="@null"
    		    	android:layout_centerVertical="true"
    		    android:phoneNumber="true"
    		    />
    			
    	
    		</RelativeLayout>
    		
    		  
    		  
    		      <View 
   		     android:id="@+id/userphoneregfgx"
        	android:layout_width="fill_parent"
        	android:layout_height="0.8dp"
        	android:background="@color/gray"
        	android:layout_below="@+id/userphoneregrev"
        	android:layout_marginTop="10dp"
        	android:layout_marginBottom="10dp"
        />
    	
   
      <Button 
        	android:id="@+id/find"
        	android:layout_width="270dp"
        	android:layout_height="40dp"
        	android:background="@drawable/btn3"
        	android:text="找回"
        	android:textColor="@color/white"
        	android:layout_below="@+id/userphoneregfgx"
        	android:textSize="13sp"

        	
        /> 

</RelativeLayout>
</ScrollView>