<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
		    android:layout_height="wrap_content"
			android:padding="5dp"
			android:descendantFocusability="blocksDescendants"
		
         >
     <LinearLayout   
            android:id="@+id/ull"
                android:orientation="horizontal" android:layout_width="92dp"  
    android:background="#DEDEDE" android:gravity="center"  
    android:layout_height="72dp"
     android:layout_alignParentLeft="true"
     android:layout_marginTop="10dp"
    >

        <ImageView
            android:id="@+id/proimage"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nopic"
            android:adjustViewBounds="true"
             />

		</LinearLayout>
		     
		   
		       <TextView
		          android:id="@+id/name"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="真实姓名"
		          android:textSize="12sp"
		          android:textColor="@color/black"
		          android:layout_marginTop="10dp"
		     	 android:layout_marginLeft="120dp"
		          />
		      <TextView 
		          android:id="@+id/xwgwtext"
		           android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="期望岗位:"
		           android:layout_below="@+id/name"
		          android:textSize="10sp" 
		          android:textColor="@color/black"
		            android:layout_alignLeft="@+id/name"
		          />
		      
		      <TextView 
		          android:id="@+id/xwgw"
		           android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="岗位名称"
		           android:layout_below="@+id/name"
		          android:textSize="10sp" 
		          android:textColor="@color/black"
		          android:layout_toRightOf="@+id/xwgwtext"
		          android:layout_marginLeft="5dp"
		          />
		      
		      <TextView 
		          android:id="@+id/xwxztext"
		           android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		           android:layout_below="@+id/xwgwtext"
		           android:text="期望薪资:"
		        android:textSize="10sp" 
		          android:textColor="@color/black"
		           android:layout_alignLeft="@+id/name"
		          />
 			      <TextView 
		          android:id="@+id/xwxz"
		           android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="薪资"
		           android:layout_below="@+id/xwgwtext"
		          android:textSize="10sp" 
		          android:textColor="@color/black"
		          android:layout_toRightOf="@+id/xwxztext"
		          android:layout_marginLeft="5dp"
		          />
 			      <TextView 
 			          	android:id="@+id/kb"
 			          	 android:layout_marginTop="2dp"
 			          	 android:layout_alignLeft="@+id/name"
 			          	 android:layout_below="@+id/xwxz"
 			          	 android:layout_width="0.5dp"
 			          	 android:layout_height="15dp"
 			          />
 			      
 			      	<TextView 
			  		  android:layout_marginTop="2dp"
			    	android:id="@+id/baochi"
			    	android:background="@drawable/btn1"
			    	android:layout_width="30dp"
			    	android:text="包吃"
			    	android:textSize="9sp"
			    	android:gravity="center"
			    	android:textColor="@color/white"
			    	android:layout_height="15dp"
			    	android:layout_below="@+id/xwxz"
			    	android:layout_toRightOf="@+id/kb"
			    	 />
			<TextView 
			    android:layout_marginTop="2dp"
			    	android:layout_below="@+id/xwxz"
			    	android:id="@+id/baozhu"
			    	android:layout_width="30dp"
			    	android:layout_height="15dp"
			    	android:background="@drawable/btn1"
			    	android:text="包住"
			    	android:textSize="9sp"
			    	android:gravity="center"
			    		android:textColor="@color/white"
			    	android:layout_toRightOf="@+id/baochi"
			    	 />
			<TextView 
			    android:layout_marginTop="2dp"
			    	android:layout_below="@+id/xwxz"
			    	android:id="@+id/shuangxiu"
			    	android:layout_width="30dp"
			    	android:background="@drawable/btn1"
			    	android:text="双休"
			    	android:textSize="9sp"
			    	android:gravity="center"
			    		android:textColor="@color/white"
			    	android:layout_height="15dp"
			    	android:layout_toRightOf="@+id/baozhu"
			    	 />
			<TextView 
			    android:layout_marginTop="2dp"
			    			    	android:layout_below="@+id/xwxz"
			    	android:id="@+id/wxyj"
			    	android:background="@drawable/btn1"
			    	android:text="五险一金"
			    	android:textSize="9sp"
			    	android:gravity="center"
			    		android:textColor="@color/white"
			    	android:layout_width="60dp"
			    	android:layout_height="15dp"
			    	android:layout_toRightOf="@+id/shuangxiu"
			    	 />
			
 			      
 			      <ImageView 
    	    	android:id="@+id/ckimage"
    	    	android:layout_width="10dp"
    	    	android:layout_height="10dp"
    	    	android:src="@drawable/waterfall_eye"
    	    	android:layout_marginTop="6dp"
    	    	android:layout_below="@+id/kb"
    	    	android:padding="0dp"
    	    	android:layout_alignLeft="@+id/name"
    	    />
 			      <TextView 
    	    	android:id="@+id/ckcs"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="10dp"
    	    	android:text="12"
    	    	android:textColor="@color/black"
    	    	android:layout_toRightOf="@+id/ckimage"
    	    	android:layout_marginTop="4dp"
    	    	android:layout_below="@+id/kb"
    	    	android:layout_marginLeft="5dp"
    	    	android:textSize="9sp"
    	    	android:layout_alignBottom="@+id/ckimage"
    	    	android:padding="0dp"
    	    />
 			      			      
 				<RelativeLayout
 			    	android:id="@+id/listmenu"
 			    	android:layout_width="wrap_content"
 			    	android:layout_height="wrap_content"
 			     	android:layout_alignParentRight="true"
 			     	android:layout_centerVertical="true"
 			     android:visibility="gone"
 			     >
 			    
 			     <Button  
 			        android:id="@+id/xg"
 			        android:layout_width="60dp"
 			        android:layout_height="40dp"  
 			        android:text="修改"  
 			        android:layout_toLeftOf="@+id/sc"
 			        android:background="@drawable/btsel"
 			        android:layout_marginRight="5dp"
 			        android:textColor="@color/white"
        			 />  
 			 
 			      <Button  
 			        android:id="@+id/sc"
 			        android:layout_width="60dp"
 			        android:layout_height="40dp"  
 			        android:text="删除"  
 			         android:textColor="@color/white"
 			         android:background="@drawable/btsel"
					android:layout_alignParentRight="true"
        			 />  
 			</RelativeLayout>
 			  
 			  
    </RelativeLayout>
